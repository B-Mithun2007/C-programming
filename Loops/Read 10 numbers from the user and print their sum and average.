#include <stdio.h>

int main() {
    int num;
    int sum = 0;
    float average;
    int i;

    printf("Enter 10 numbers:\n");
    for (i= 1;i<= 10;i++) 
    {
        printf("Enter number %d: ",i);
        scanf("%d", &num);
        sum= sum+num;
    }
    average = sum / 10.0; 
    printf("\nSum of the 10 numbers: %d\n", sum);
    printf("Average of the 10 numbers: %f\n", average); 
    return 0;
}
